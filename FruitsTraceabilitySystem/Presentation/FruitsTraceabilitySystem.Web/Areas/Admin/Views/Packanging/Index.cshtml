@using FruitsTraceabilitySystem.Application.ViewModels.Packangings
@model IEnumerable<PackangingViewModel>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Packanging List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Packanging" asp-action="Created" class="btn btn-primary"><i class="far fa-plus-circle"></i> &nbsp; New Packanging</a>
        </div>
    </div>
</div>
<br />
<br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Package Name
            </th>
            <th>
                Product Sorting
            </th>
            <th>
                User Id
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var packanging in Model)
        {
            <tr>
                <td width="35%">
                    @packanging.Package.Name
                </td>
                <td width="30%">
                    @packanging.ProductSortingName
                </td>
                <td width="20%">
                    @packanging.User.Name
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Packanging" class="btn btn-primary mx-2" asp-route-id="@packanging.Id" asp-action="Edit"><i class="fad fa-file-edit"></i></a>
                        <a asp-controller="Packanging" class="btn btn-danger mx-2" asp-route-id="@packanging.Id" asp-action="Delete"><i class="fad fa-trash-alt"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>