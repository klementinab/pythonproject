@using FruitsTraceabilitySystem.Application.ViewModels.Locations
@model LocationViewModel

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Location</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="PlaceName"></label>
            <input asp-for="PlaceName" class="form-control" />
            <span asp-validation-for="PlaceName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px"><i class="fad fa-edit"></i> Update</button>
        <a asp-controller="Location" asp-action="Index" class="btn btn-danger" style="width:150px"><i class="fad fa-long-arrow-left"></i> Back</a>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}