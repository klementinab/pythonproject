@using FruitsTraceabilitySystem.Application.ViewModels.Sortings
@model IEnumerable<SortingViewModel>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Sorting List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Sorting" asp-action="Created" class="btn btn-primary"><i class="far fa-plus-circle"></i> &nbsp; New Sorting</a>
        </div>
    </div>
</div>
<br/>
<br/>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                User Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var sorting in Model)
        {
            <tr> 
                <td width="40%">
                    @sorting.ProductName
                </td>
                <td width="35%">
                    @sorting.User.Name
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Sorting" class="btn btn-primary mx-2" asp-route-id="@sorting.Id" asp-action="Edit"><i class="fad fa-file-edit"></i></a>
                        <a asp-controller="Sorting" class="btn btn-danger mx-2" asp-route-id="@sorting.Id" asp-action="Delete"><i class="fad fa-trash-alt"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>