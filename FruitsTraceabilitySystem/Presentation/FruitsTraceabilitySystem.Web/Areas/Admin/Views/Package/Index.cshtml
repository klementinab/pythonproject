@using FruitsTraceabilitySystem.Application.ViewModels.Packages
@model IEnumerable<PackageViewModel>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Package List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Package" asp-action="Created" class="btn btn-primary"><i class="far fa-plus-circle"></i> &nbsp; New Package</a>
        </div>
    </div>
</div>
<br/>
<br/>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
             <th>
                Package Id
            </th>
            <th>
                Package Name
            </th>
             <th>
                Package Type
            </th>
             <th>
                Package Quantity
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var package in Model)
        {
            <tr>
                 <td width="35%">
                    @package.Id
                </td> 
                <td width="30%">
                    @package.Name
                </td> 
                <td width="25%">
                    @package.Type
                </td> 
                <td width="20%">
                    @package.Quantity
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Package" class="btn btn-primary mx-2" asp-route-id="@package.Id" asp-action="Edit"><i class="fad fa-file-edit"></i></a>
                        <a asp-controller="Package" class="btn btn-danger mx-2" asp-route-id="@package.Id" asp-action="Delete"><i class="fad fa-trash-alt"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>