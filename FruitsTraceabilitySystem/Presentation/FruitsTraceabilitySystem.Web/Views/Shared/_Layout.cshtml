@using FruitsTraceabilitySystem.Domain.Models.SeedRoles
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FruitsTraceabilitySystem.Web</title>
    <link rel="stylesheet" href="~/css/BootswatchThems.css" />
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FruitsTraceabilitySystem.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container-fluid">
    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FruitsTraceabilitySystem</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
      @*<ul class="navbar-nav justify-content-center me-auto">*@
      <ul class="navbar-nav justify-content-center  me-auto">
       <li class="nav-item">
           <a class="nav-link active" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
           </li>
           @if(User.IsInRole(SeedRole.RoleAdmin)){
             <li class="nav-item">
               <a class="nav-link" asp-area="Admin" asp-controller="Category" asp-action="Index">Category</a>
           </li>
           <li class="nav-item">
               <a class="nav-link" asp-area="Admin" asp-controller="Product" asp-action="Index">Product</a>
           </li>
           <li class="nav-item">
               <a class="nav-link" asp-area="Admin" asp-controller="Harvest" asp-action="Index">Harvest</a>
           </li>
           <li class="nav-item">
               <a class="nav-link" asp-area="Admin" asp-controller="Sorting" asp-action="Index">Sorting</a>
           </li> 
           <li class="nav-item">
               <a class="nav-link" asp-area="Admin" asp-controller="Package" asp-action="Index">Package</a>
           </li> 
           <li class="nav-item">
               <a class="nav-link" asp-area="Admin" asp-controller="Packanging" asp-action="Index">Packanging</a>
           </li> 
            <li class="nav-item">
               <a class="nav-link" asp-area="Admin" asp-controller="Location" asp-action="Index">Locations</a>
           </li> 
           }
      </ul>
      <partial name="_LoginPartial" />
    </div>
  </div>
</nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

   @* <footer class="footer text-muted bg-primary">
        <div class="container">
            &copy; 2022 - FruitsTraceabilitySystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
